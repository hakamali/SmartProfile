<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">




    <TextView
        android:id="@+id/text_view_name_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:textColor="#b61c1c"

        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:id="@+id/text_view_time_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:text="08:00"
        android:textColor="#b61c1c"

        android:textSize="15sp"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:id="@+id/text_view_date_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="8dp"
        android:textColor="#b61c1c"


        android:layout_marginTop="5dp"
        android:text="15/13/2019"
        android:textSize="15sp"
        android:layout_marginBottom="8dp"
         />


    <TextView
        android:id="@+id/text_view_location_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="40dp"
        android:text="Name"
        android:textColor="#b61c1c"

        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/image_view_dp_list_snippet"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_view_dp_list_snippet"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.25" />


</android.support.v7.widget.CardView>